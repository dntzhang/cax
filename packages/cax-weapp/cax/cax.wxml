<canvas 
    class="cax-canvas"
    bindtouchstart="touchStart" 
    bindtouchmove="touchMove" 
    bindtouchend="touchEnd" 
    canvas-id="{{ id }}" 
    style="border: 1px solid;width: {{width}}px; height: {{height}}px;"/>

<canvas class="cax-canvas-hit" canvas-id="{{id}}Hit" style='width:1px;height:1px;'></canvas>
